<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DairyEditBar">
        <attr name="leftImage" format="reference" />
        <attr name="centerTitle" format="string" />
        <attr name="rightImage" format="reference" />
    </declare-styleable>

    <declare-styleable name="CommonBar">
        <attr name="title" format="string" />
        <attr name="imageOfRight" format="reference" />
        <attr name="textOfRight" format="string" />
    </declare-styleable>

    <declare-styleable name="AngleTextView">
        <attr name="angle_text_color" format="reference|color" />
        <attr name="angle_text_size" format="float" />
        <attr name="angle_text_angles" format="float" />
        <attr name="angle_text_content" format="string" />
        <attr name="angle_text_offsetY" format="float" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="flowLayout_horizontalSpacing" format="dimension"/>
        <attr name="flowLayout_verticalSpacing" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="YoloTextView">
        <attr name="YoloTextStyle">
            <enum name="normal" value="0" />
            <enum name="middle" value="1" />
            <enum name="bold" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AnimateHorizontalProgressBar">
        <attr name="ahp_progressColor" format="color|reference" />
        <attr name="ahp_backgroundColor" format="color|reference" />
        <attr name="ahp_cornerRadius" format="dimension|reference" />
    </declare-styleable>
</resources>