<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="170dp"
    android:background="@drawable/bg_shadow"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_normal_btn_press_top"
        android:gravity="center"
        android:text="详情"
        android:textColor="@color/EditText"
        android:textSize="15sp" />

    <View
        android:layout_width="120dp"
        android:layout_height="0.5dp"
        android:background="@color/Divider" />

    <TextView
        android:id="@+id/tv_copy_content"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_normal_btn_press"
        android:gravity="center"
        android:text="复制文本"
        android:textColor="@color/EditText"
        android:textSize="15sp" />

    <View
        android:layout_width="120dp"
        android:layout_height="0.5dp"
        android:background="@color/Divider" />

    <TextView
        android:id="@+id/tv_stickers"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_normal_btn_press"
        android:gravity="center"
        android:text="切换贴纸"
        android:visibility="gone"
        android:textColor="@color/EditText"
        android:textSize="15sp" />
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Divider" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_normal_btn_press_bottom"
        android:gravity="center"
        android:text="分享"
        android:textColor="@color/EditText"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Divider" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_normal_btn_press_bottom"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/EditText"
        android:textSize="15sp" />
</LinearLayout>