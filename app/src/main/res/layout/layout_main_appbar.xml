<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.tw.longerrelationship.viewmodel.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mine"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@drawable/ic_drawer" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_main_search"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@null"
                android:hint="@string/key_world_search"
                android:textColor="@color/black"
                android:textColorHint="@color/SearchEditHintText"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_display"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:paddingLeft="14dp"
            android:paddingRight="14dp" />

        <TextView
            android:id="@+id/tv_filter"
            android:visibility="gone"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/filter"
            android:background="@drawable/rip_common"
            android:textColor="@color/black_weak"
            android:textSize="@dimen/app_bar_text_size" />
    </LinearLayout>
</layout>


