<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ct_dairy_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line_divider_left"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="@color/topDividerLine"
                app:layout_constraintBottom_toBottomOf="@id/tv_record_num"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_record_num"
                app:layout_constraintTop_toTopOf="@id/tv_record_num" />

            <TextView
                android:id="@+id/tv_record_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="共3篇"
                android:textColor="@color/topDividerText"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/line_divider_left"
                app:layout_constraintRight_toLeftOf="@id/line_divider_right"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line_divider_right"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="@color/topDividerLine"
                app:layout_constraintBottom_toBottomOf="@id/tv_record_num"
                app:layout_constraintLeft_toRightOf="@id/tv_record_num"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_record_num" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_dairy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:overScrollMode="never"
                android:paddingBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/tv_record_num" />

            <ImageView
                android:id="@+id/iv_empty"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_empty"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</layout>